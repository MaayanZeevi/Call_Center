        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
            integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="./CallCenterController.js"></script>
        <script src="./data.js"></script>
        <script src="/socket.io/socket.io.js"></script>
    
    </head>
    
    
    <body class="p-3 mb-2 bg-danger text-white" data-gr-c-s-loaded="true" onload="initSocket()"></body>
    <div class="btn-group">
        <em style="color: black; font: bold; padding-right: 20; text-align:center;">Total Waiting calls:</em>
        <input type="number" id="total" min="0" max="200" value="0" class="input-group-text">
        <input type="button" value="Set" min="0" onclick="setTotalWaitingCalls(total.value)" class="input-group-text" />
        &nbsp;
        <select id="mood" class="input-group-text">
            <option value='holiday'>Holidays</option>
            <option value='vacations'>Vacations</option>
            <option value='regular day'>Regular day</option>
        </select>
    </div>
    <hr>
    <input type="button" onclick="startConv()" value="Answer Call" class="input-group-text" style="padding-bottom: 20;" />
    <table id="openConversations" border="1" class="table table-danger">
        <tr>
            
            <th>Start Time</th>
            <th>City</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Prev Calls</th>
            <th>Product</th>
            <th>Topic</th>
            <th>End</th>
        </tr>
    </table>
    </body>
    
    </html>